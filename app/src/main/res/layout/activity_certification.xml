<?xml version="1.0" encoding="utf-8"?>
<layout>


    <data>
        <variable
            name="viewModel"
            type="com.hs.dbbclientside.module.login.CertificationViewModel"/>
    </data>





<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="#F6F8F7"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <!--标题-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y98"
        android:background="#FFF">

        <FrameLayout
            android:onClick="back"
            android:layout_width="@dimen/x98"
            android:layout_height="@dimen/y98">

            <ImageView
                android:layout_width="@dimen/x18"
                android:layout_height="@dimen/y31"
                android:layout_gravity="center"
                android:src="@drawable/ic_arrow_left"/>

        </FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="实名认证"
            android:textColor="#222222"
            android:textSize="@dimen/x36"/>


    </RelativeLayout>


    <View
        style="@style/horizontalLine"/>

    <!--姓名-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y120"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/x176"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/x30"
            android:text="姓名"
            android:textColor="#444"
            android:textSize="@dimen/x30"/>

        <EditText
            style="@style/edit_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="请输入您的真实姓名"
            android:textColor="#BBB"
            android:textColorHint="#BBB"
            android:textSize="@dimen/x30"
            />
    </LinearLayout>

    <View
        style="@style/horizontalLine"/>




    <View
        style="@style/horizontalLine"/>

    <!--身份证号-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y120"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/x176"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/x30"
            android:text="身份证号"
            android:textColor="#444"
            android:textSize="@dimen/x30"/>

        <EditText
            style="@style/edit_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="请输入您的身份证号"
            android:textColor="#BBB"
            android:textColorHint="#BBB"
            android:textSize="@dimen/x30"/>

    </LinearLayout>

    <View
        style="@style/horizontalLine"/>


    <!--手机号-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y120"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/x176"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/x30"
            android:text="手机号"
            android:textColor="#444"
            android:textSize="@dimen/x30"/>

        <EditText
            style="@style/edit_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="请输入您的常用手机号"
            android:textColor="#BBB"
            android:textColorHint="#BBB"
            android:textSize="@dimen/x30"/>

    </LinearLayout>

    <View
        style="@style/horizontalLine"/>


    <Button
        android:layout_width="@dimen/x528"
        android:layout_height="@dimen/y86"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/y120"
        android:background="@drawable/enter_btn_05"
        android:text="完成"
        android:textColor="#FFF"
        android:textSize="@dimen/x36"/>










</LinearLayout>


</layout>