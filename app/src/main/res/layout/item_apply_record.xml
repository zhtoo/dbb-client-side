<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="str"
            type="String"/>
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:orientation="vertical">

        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y100"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/apply_record_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/x24"
                android:textColor="#999"
                android:layout_marginLeft="@dimen/x30"
                android:text="汇商贷"/>


            <TextView
                android:id="@+id/apply_record_time"
                android:layout_toRightOf="@id/apply_record_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/x24"
                android:textColor="#999"
                android:layout_marginLeft="@dimen/x97"
                android:text="2017/12/27"/>



            <TextView
                android:layout_toRightOf="@id/apply_record_time"
                android:id="@+id/apply_record_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/x24"
                android:textColor="#999"
                android:layout_marginLeft="@dimen/x102"
                android:text="￥1345.91"/>


            <TextView
                android:id="@+id/apply_record_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/x24"
                android:layout_alignParentRight="true"
                android:textColor="#FECF70"
                android:layout_marginRight="@dimen/x30"
                android:text="审核中"/>


        </RelativeLayout>

        <View
            style="@style/horizontalLine"/>

    </LinearLayout>

</layout>