<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="viewModel"
            type="com.hs.dbbclientside.module.me.UploadIdCardViewModel"/>

    </data>


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:background="#F6F8F7"
                  android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y98"
            android:background="#FFF">

            <FrameLayout
                android:layout_width="@dimen/x98"
                android:layout_height="@dimen/y98">

                <ImageView
                    android:layout_width="@dimen/x18"
                    android:layout_height="@dimen/y31"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_arrow_left"/>

            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="身份证照片"
                android:textColor="#222222"
                android:textSize="@dimen/x36"/>

        </RelativeLayout>

        <View style="@style/horizontalLine"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/y90"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/x30"
            android:textColor="#999"
            android:textSize="@dimen/x28"
            android:text="请提供身份证正反两面照片"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <RelativeLayout
                android:onClick="@{viewModel.go2Picture}"
                android:layout_marginLeft="@dimen/x30"
                android:layout_width="@dimen/x330"
                android:layout_height="@dimen/x330">

                <ImageView
                    android:layout_width="@dimen/x330"
                    android:layout_height="@dimen/x330"
                    android:src="@drawable/sfz_btn_01"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="@dimen/x100"
                    android:textColor="#999"
                    android:textSize="@dimen/x28"
                    android:text="请上传图片"/>

            </RelativeLayout>



            <RelativeLayout
                android:onClick="@{viewModel.go2Picture}"
                android:layout_marginLeft="@dimen/x30"
                android:layout_width="@dimen/x330"
                android:layout_height="@dimen/x330">

                <ImageView
                    android:layout_width="@dimen/x330"
                    android:layout_height="@dimen/x330"
                    android:src="@drawable/sfz_btn_01"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="@dimen/x100"
                    android:textColor="#999"
                    android:textSize="@dimen/x28"
                    android:text="请上传图片"/>

            </RelativeLayout>


        </LinearLayout>


    </LinearLayout>


</layout>