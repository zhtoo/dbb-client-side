<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>


        <variable
            name="viewModle"
            type="com.hs.dbbclientside.module.me.BillViewModle"/>


    </data>


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="vertical">

        <RelativeLayout
            android:background="#ECF3FD"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y98">

            <FrameLayout
                android:layout_width="@dimen/x98"
                android:layout_height="@dimen/y98">

                <ImageView
                    android:layout_width="@dimen/x18"
                    android:layout_height="@dimen/y31"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_arrow_left"/>

            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="账单"
                android:textColor="#222222"
                android:textSize="@dimen/x36"/>


        </RelativeLayout>


        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:background="#ECF3FD"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y543">

                    <TextView
                        android:id="@+id/bill_year"
                        android:layout_marginTop="@dimen/y66"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:textSize="@dimen/x28"
                        android:textColor="#547DAD"
                        android:text="2017年12月"/>

                    <ImageView
                        android:layout_marginLeft="@dimen/x15"
                        android:layout_marginTop="@dimen/y80"
                        android:layout_toRightOf="@id/bill_year"
                        android:layout_width="@dimen/x21"
                        android:layout_height="@dimen/y12"
                        android:src="@drawable/zd_btn_01"/>


                    <ImageView
                        android:layout_marginTop="@dimen/y188"
                        android:layout_width="@dimen/x60"
                        android:layout_height="@dimen/y60"
                        android:layout_centerHorizontal="true"
                        android:textSize="@dimen/x28"
                        android:textColor="#547DAD"
                        android:src="@drawable/zd_icon_01"/>


                    <TextView
                        android:layout_marginTop="@dimen/y290"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:textSize="@dimen/x28"
                        android:textColor="#547DAD"
                        android:text="已还款"/>


                    <TextView
                        android:layout_marginTop="@dimen/y290"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="@dimen/x30"
                        android:layout_marginBottom="@dimen/y80"
                        android:textSize="@dimen/x28"
                        android:textColor="#547DAD"
                        android:text="已还金额"/>



                    <TextView
                        android:layout_marginTop="@dimen/y290"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginRight="@dimen/x30"
                        android:layout_marginBottom="@dimen/y80"
                        android:textSize="@dimen/x28"
                        android:textColor="#547DAD"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:text="￥ 12345654.78"/>


                </RelativeLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y100"
                    android:gravity="center_vertical"
                    android:textColor="#999"
                    android:textSize="@dimen/x28"
                    android:paddingLeft="@dimen/x30"
                    android:text="本月账单2笔,共1345.91元"/>

                <View
                    style="@style/horizontalLine"/>

                <LinearLayout
                    android:id="@+id/bill_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"/>


            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>


    </LinearLayout>


</layout>