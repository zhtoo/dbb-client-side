<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="string"
            type="String"/>
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:id="@+id/message_container"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:background="#FFF"
                  android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y130">

            <TextView
                android:id="@+id/detail_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x30"
                android:layout_marginTop="@dimen/y28"
                android:text="在线支付"
                android:textColor="#444"
                android:textSize="@dimen/x30"/>


            <TextView
                android:id="@+id/detail_balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/detail_type"
                android:layout_marginLeft="@dimen/x30"
                android:layout_marginTop="@dimen/y15"
                android:text="余额：46.88"
                android:textColor="#666"
                android:textSize="@dimen/x24"/>


            <TextView
                android:id="@+id/detail_date"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/x30"
                android:layout_marginTop="@dimen/y28"
                android:text="2018-01-01"
                android:textColor="#999999"
                android:textSize="@dimen/x20"/>


            <TextView
                android:id="@+id/detail_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/detail_date"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/x30"
                android:layout_marginTop="@dimen/y20"
                android:text="+10.00"
                android:textColor="#4a88ed"
                android:textSize="@dimen/x28"/>


        </RelativeLayout>

        <View
            style="@style/horizontalLine"
            android:layout_marginLeft="@dimen/x30"/>


    </LinearLayout>


</layout>