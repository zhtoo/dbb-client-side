<?xml version="1.0" encoding="utf-8"?>
<layout>


    <data>

        <variable
            name="viewModel"
            type="com.hs.dbbclientside.module.borrow.ApplyIntroduceViewModel"/>


    </data>


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y98">

            <FrameLayout
                android:onClick="back"
                android:layout_width="@dimen/x98"
                android:layout_height="@dimen/y98"
                >

                <ImageView
                    android:layout_width="@dimen/x18"
                    android:layout_height="@dimen/y31"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_arrow_left"/>

            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="汇民贷"
                android:textColor="#222222"
                android:textSize="@dimen/x36"/>


        </RelativeLayout>



        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/y255"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_apply_banner"/>


        <TextView
            android:layout_marginTop="@dimen/y122"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#0A58AF"
            android:textSize="@dimen/x34"
            android:text="可借额度"/>


        <TextView
            android:layout_marginTop="@dimen/y48"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#0A58AF"
            android:textSize="@dimen/x40"
            android:text="￥2,000-￥20,000"/>



        <LinearLayout
            android:layout_marginTop="@dimen/y98"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_marginLeft="@dimen/x86"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="@dimen/x118"
                    android:layout_height="@dimen/y118"
                    android:src="@drawable/jkjr_icon_01"/>

                <TextView
                    android:layout_marginTop="@dimen/y15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/x24"
                    android:textColor="#A0B6CC"
                    android:text="日利率低至0.049%"/>


            </LinearLayout>


            <LinearLayout
                android:layout_marginLeft="@dimen/x60"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="@dimen/x118"
                    android:layout_height="@dimen/y118"
                    android:src="@drawable/jkjr_icon_02"/>

                <TextView
                    android:layout_marginTop="@dimen/y15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/x24"
                    android:textColor="#A0B6CC"
                    android:text="随时随还"/>


            </LinearLayout>


            <LinearLayout
                android:layout_marginLeft="@dimen/x60"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="@dimen/x118"
                    android:layout_height="@dimen/y118"
                    android:src="@drawable/jkjr_icon_01"/>

                <TextView
                    android:layout_marginTop="@dimen/y15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/x24"
                    android:textColor="#A0B6CC"
                    android:text="按日计息"/>


            </LinearLayout>



        </LinearLayout>


        <Button
            android:onClick="@{viewModel.onApplyIntroduceClick}"
            android:id="@+id/apply_introduce_btn"
            android:layout_marginTop="@dimen/y94"
            android:layout_gravity="center"
            android:layout_width="@dimen/x503"
            android:layout_height="@dimen/y80"
            android:background="@drawable/bg_apply_btton"
            android:textColor="#fff"
            android:textSize="@dimen/x34"
            android:text="立即申请"/>


        <TextView
            android:layout_marginTop="@dimen/y30"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#137ABC"
            android:textSize="@dimen/x24"
            android:text="借款须知以及风险提示＞"/>



    </LinearLayout>


</layout>