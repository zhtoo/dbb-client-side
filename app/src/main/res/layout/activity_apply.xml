<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="viewModle"
            type="com.hs.dbbclientside.module.borrow.ApplyViewModle"/>

    </data>


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y98">

            <FrameLayout
                android:onClick="back"
                android:layout_width="@dimen/x98"
                android:layout_height="@dimen/y98"
                >

                <ImageView
                    android:layout_width="@dimen/x18"
                    android:layout_height="@dimen/y31"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_arrow_left"/>

            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="贷款详情"
                android:textColor="#222222"
                android:textSize="@dimen/x36"/>


        </RelativeLayout>


        <View style="@style/horizontalLine"/>


        <FrameLayout
            android:layout_width="@dimen/x435"
            android:layout_height="@dimen/y435"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/y40">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/jksq_icon_04"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/y172"
                android:text="20,000"
                android:textColor="#fff"
                android:textSize="@dimen/x36"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/y30"
                android:text="可贷最高额度"
                android:textColor="#fff"
                android:textSize="@dimen/x28"/>


        </FrameLayout>

        <View
            style="@style/horizontalLine"
            android:layout_marginTop="@dimen/y80"/>

        <!--借款金额-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y120"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <ImageView
                android:layout_width="@dimen/x66"
                android:layout_height="@dimen/y66"
                android:layout_marginLeft="@dimen/x30"
                android:src="@drawable/jksq_icon_01"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x15"
                android:text="借款金额"
                android:textColor="#222"
                android:textSize="@dimen/x28"/>

            <View
                style="@style/autoFillStyle"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/x15"
                android:background="@null"

                android:text="0.0"
                android:textColor="#61AFFA"
                android:textColorHint="#BBBBBB"
                android:textCursorDrawable="@drawable/bg_edit_cursor"
                android:textSize="@dimen/x24"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/x30"
                android:text="元"
                android:textColor="#222"
                android:textSize="@dimen/x24"/>


        </LinearLayout>

        <View
            style="@style/horizontalLine"/>
        <!--借款周期-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y120"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <ImageView
                android:layout_width="@dimen/x66"
                android:layout_height="@dimen/y66"
                android:layout_marginLeft="@dimen/x30"
                android:src="@drawable/jksq_icon_02"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x15"
                android:text="借款周期"
                android:textColor="#222"
                android:textSize="@dimen/x28"/>

            <View
                style="@style/autoFillStyle"/>

          <!--  <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/x15"
                android:background="@null"

                android:text="0.0"
                android:textColor="#61AFFA"
                android:textColorHint="#BBBBBB"
                android:textCursorDrawable="@drawable/bg_edit_cursor"
                android:textSize="@dimen/x24"/>-->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/x30"
                android:text="请选择 >"
                android:textColor="#61AFFA"
                android:textSize="@dimen/x24"/>


        </LinearLayout>
        <View
            style="@style/horizontalLine"/>
        <!--每月需还-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y120"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <ImageView
                android:layout_width="@dimen/x66"
                android:layout_height="@dimen/y66"
                android:layout_marginLeft="@dimen/x30"
                android:src="@drawable/jksq_icon_03"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x15"
                android:text="每月需归"
                android:textColor="#222"
                android:textSize="@dimen/x28"/>

            <View
                style="@style/autoFillStyle"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/x15"
                android:background="@null"

                android:text="0.0"
                android:textColor="#61AFFA"
                android:textColorHint="#BBBBBB"
                android:textCursorDrawable="@drawable/bg_edit_cursor"
                android:textSize="@dimen/x24"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/x30"
                android:text="元"
                android:textColor="#222"
                android:textSize="@dimen/x24"/>


        </LinearLayout>
        <View
            style="@style/horizontalLine"/>

        <Button
            android:layout_marginTop="@dimen/y60"
            android:layout_gravity="center"
            android:background="@drawable/jksq_btn_01"
            android:layout_width="@dimen/x470"
            android:layout_height="@dimen/y90"
            android:textSize="@dimen/x36"
            android:textColor="#61AFFA"
            android:text="确认提交"/>

    </LinearLayout>

</layout>
