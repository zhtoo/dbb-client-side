<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="MainActivityTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowActionBar">false</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <!-- 横向线条 -->
    <style name="horizontalLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/x1</item>
        <item name="android:background">@color/lineBackground</item>
    </style>

    <!-- 横向线条 -->
    <style name="verticalLine">
        <item name="android:layout_width">@dimen/x1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/lineBackground</item>
    </style>
    <!--自动填充布局-->
    <style name="autoFillStyle">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <!--按钮外部的布局-->
    <style name="home_button_container">
        <item name="android:layout_marginLeft">@dimen/x15</item>
        <item name="android:layout_marginTop">@dimen/y15</item>
        <item name="android:layout_width">@dimen/x352</item>
        <item name="android:layout_height">@dimen/y140</item>
        <item name="android:background">#F8F9FB</item>

    </style>

    <!--按钮名字-->
    <style name="home_button_name">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/y30</item>
        <item name="android:layout_marginLeft">@dimen/x20</item>
        <item name="android:textSize">@dimen/x28</item>
        <item name="android:textColor">#222222</item>

    </style>
    <!--按钮功能介绍-->
    <style name="home_button_instruction">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/x24</item>
        <item name="android:layout_marginTop">@dimen/y25</item>
        <item name="android:layout_marginLeft">@dimen/x20</item>
        <item name="android:textColor">#999999</item>
    </style>
    <!--按钮图片-->
    <style name="home_button_icon">
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_width">@dimen/x135</item>
        <item name="android:layout_height">@dimen/y140</item>
    </style>


</resources>
